@model IEnumerable<PontoCerto.WebApplication.Models.Admin.EmpresaDto> 

@{
    ViewBag.Title = "Empresas";
    Layout = "_Layout";
}

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
        <tr class="table-active">
            <th scope="col">Nome</th>
            <th scope="col">Cnpj</th>
            <th scope="col">Quantidade de funcionários</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Any())
        {
            foreach (var empresa in Model)
            {
                <tr>
                    <td>@empresa.Nome</td>
                    <td>@empresa.Cnpj</td>
                    <td>@empresa.QuantidadeFuncionarios</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <th scope="row" colspan="4" class="text-center">
                    Não há empresas cadastradas
                </th>
            </tr>
        }
        </tbody>
    </table>
</div>
